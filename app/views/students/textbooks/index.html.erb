    <div class="text">
      <h1>教材一覧</h1>
    </div>

    <div class="contents">
      <% @textbooks.each do |textbook| %>
      <div class="item">
        <h3>教材名</h3>
          <%= textbook.name %>
        <h3 class="image">教材画像</h3>
          <%= link_to students_textbook_path(textbook.id) do %>
            <%= attachment_image_tag textbook, :image, format: 'jpeg', size: "100x100" %>
          <% end %>
      </div>
      <% end %>
    </div>

    <div>
      <%= paginate @textbooks %>
    </div>