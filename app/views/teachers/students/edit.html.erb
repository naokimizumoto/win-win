 <div class="student-edit">
   <h1>生徒編集画面</h1>
      <% if @student.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <ul>
          <% @student.errors.full_messages.each do |message| %>
            <li>
              <%= message %>
            </li>
          <% end %>
        </ul>
      </div>
      <% end %>
    <%= form_with model: @student,url: teachers_student_path(@student.id) ,local: true do |f|%>

      <h2 class="block">氏名</h2>
        <%= f.text_field :name %><br>
      <h2 class="block">氏名カナ</h2>
        <%= f.text_field :name_kana %><br>
      <h2 class="block">生徒番号</h2>
        <%= f.text_field :number %><br>
      <h2 class="text1">
          <%= f.submit "編集する"%>
      </h2>
  　 <% end %>
  </div>
