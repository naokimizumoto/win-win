
  <div class="student-detail">
    <div class="block-student">
      <h2>生徒名</h2>
     <strong class="text"><%= @student.name%></strong>
    </div>
    <div class="block-student">
      <h2>ふりがな</h2>
      <strong class="text"><%= @student.name_kana%></strong>
    </div>
    <div class="block-student">
      <h2>生徒番号</h2>
      <strong class="text"><%= @student.number%></strong>
    </div>
    <div class="block-student">
      <p class="text">
        <%= link_to "編集する", edit_teachers_student_path(@student.id) %>
        <%= link_to "削除する", teachers_student_path(@student.id),method: :delete, "data-confirm" => "本当に削除しますか"%>
      </p>
    </div>
  </div>


      <div class="block-textbook_student">
        <% @textbooks.each do |textbook|%>
          <%=link_to  teachers_textbook_student_path(textbook.id) do %>
            <%= attachment_image_tag textbook.textbook, :image, size: "600x400" %>
          <% end %>
        <% end %>
      </div>