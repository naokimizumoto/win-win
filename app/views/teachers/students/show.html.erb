<div class="container">
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-11">
      <h3>生徒詳細画面</h3>
      <h3>氏名：<%= @student.name%></h3>
      <h3>生徒番号： <%= @student.number%></h3>
